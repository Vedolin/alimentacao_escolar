<p id="notice"><%= notice %></p>

<h1>Meals</h1>

<table>
  <thead>
    <tr>
      <th>Planned</th>
      <th>Served</th>
      <th>Scheduled to</th>
      <th>Age</th>
      <th>Kind</th>
      <th>School</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @meals.each do |meal| %>
      <tr>
        <td><%= meal.planned %></td>
        <td><%= meal.served %></td>
        <td><%= meal.scheduled_to %></td>
        <td><%= meal.age %></td>
        <td><%= meal.kind.name %></td>
        <td><%= meal.school.name %></td>
        <td><%= link_to 'Show', meal %></td>
        <td><%= link_to 'Edit', edit_meal_path(meal) %></td>
        <td><%= link_to 'Destroy', meal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

