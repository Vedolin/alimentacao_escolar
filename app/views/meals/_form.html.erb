<%= simple_form_for(@meal) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :planned %>
    <%= f.input :served %>
    <%= f.input :scheduled_to %>
    <%= f.association :age %>
    <%= f.association :kind %>
    <%= f.association :school %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
